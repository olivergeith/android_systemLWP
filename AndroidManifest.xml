<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.geithonline.systemlwp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <!-- For Accessing Gallery images -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- For Writing Debug images -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- For Accessing Gallery images across users -->
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>
     
    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" >
    </uses-feature>
 
    <application
        android:icon="@drawable/icon"
        android:allowBackup="true"
        android:label="@string/app_name">
        <service
            android:name="LiveWallpaperService"
            android:enabled="true"
            android:label="@string/wallpaper_description"
            android:permission="android.permission.BIND_WALLPAPER" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/mywallpaper" >
            </meta-data>
        </service>
        <activity
            android:name=".PreferencesActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.DeviceDefault.Wallpaper" >
        </activity>
        <activity  android:name="net.margaritov.preference.colorpicker.ColorPickerPreference" />
        

    </application>

</manifest>
