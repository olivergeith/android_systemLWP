<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <ListPreference 
      android:key="opacity" 
      android:title="Opacity of Battery" 
      android:dialogTitle="Opacity of Battery" 
      android:entries="@array/opacities"
      android:entryValues="@array/opacitiesValues"
      android:defaultValue="128"
      />
  <ListPreference 
      android:key="background_opacity" 
      android:title="Opacity of Battery-Background" 
      android:dialogTitle="Opacity of Battery-Background" 
      android:entries="@array/opacities"
      android:entryValues="@array/opacitiesValues"
      android:defaultValue="128"
      />
  <Preference
      android:key="backgroundPicker"
      android:title="Choose Background"
      android:summary="Select a custom Background Image"
     />
</PreferenceScreen> 